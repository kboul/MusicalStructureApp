<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicalstructureapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArtistsActivity"
            android:label="@string/category_artists"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AlbumsActivity"
            android:label="@string/category_albums"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".GenresActivity"
            android:label="@string/category_genres"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AllSongsActivity"
            android:label="@string/category_all_songs"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".NowPlayingActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
    </application>

</manifest>